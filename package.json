{
  "name": "@dydent/deferral",
  "description": "Decentralized Referral System",
  "version": "1.0.0",
  "author": {
    "name": "dydent",
    "url": "https://github.com/dydent"
  },
  "keywords": [
    "blockchain",
    "referral-systems",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "typescript",
    "typechain"
  ],
  "scripts": {
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts}\"",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "test": "npx hardhat test --network hardhat",
    "test-payment-transmitter-v1": "npx hardhat test test/v1-referral-payment-transmitter.test.ts",
    "test-upgrades-payment-transmitter": "npx hardhat test test/upgradable-referral-payment-transmitter.test.ts",
    "test-quantity-payment-v1": "npx hardhat test test/v1-referral-payment-quantity.test.ts",
    "test-quantity-payment-v2": "npx hardhat test test/v2-referral-payment-quantity.test.ts",
    "deploy-V1ReferralQuantityPayment": "hardhat run scripts/deploy-V1ReferralPaymentQuantityUpgradable.ts --network hardhat",
    "deploy-V1ReferralQuantityPayment-goerli": "hardhat run scripts/deploy-V1ReferralPaymentQuantityUpgradable.ts --network goerli",
    "deploy-V2ReferralQuantityPayment": "hardhat run scripts/deploy-V2ReferralPaymentQuantityUpgradable.ts --network hardhat",
    "deploy-V2ReferralQuantityPayment-goerli": "hardhat run scripts/deploy-V2ReferralPaymentQuantityUpgradable.ts --network goerli",
    "deploy-UpgradableReferralPaymentTransmitter": "hardhat run scripts/deploy-UpgradableReferralPaymentTransmitters.ts --network hardhat",
    "deploy-UpgradableReferralPaymentTransmitter-goerli": "hardhat run scripts/deploy-UpgradableReferralPaymentTransmitters.ts --network goerli",
    "deploy-V1ReferralPaymentTransmitter": "hardhat run scripts/deploy-V1ReferralPaymentTransmitter.ts --network hardhat",
    "deploy-V1ReferralPaymentTransmitter-ganache": "hardhat run scripts/deploy-V1ReferralPaymentTransmitter.ts --network ganache",
    "deploy-V1ReferralPaymentTransmitter-goerli": "hardhat run scripts/deploy-V1ReferralPaymentTransmitter.ts --network goerli",
    "deploy-V1ReferralPaymentTransmitterall-networks-": "hardhat run scripts/deploy-V1ReferralPaymentTransmitter.ts --network hardhat && hardhat run scripts/deploy-V1ReferralPaymentTransmitter.ts --network ganache && hardhat run scripts/deploy-V1ReferralPaymentTransmitter.ts --network goerli",
    "deploy-all-contracts": "hardhat run scripts/deploy-V1ReferralPaymentTransmitter.ts --network hardhat && hardhat run scripts/deploy-UpgradableReferralPaymentTransmitters.ts --network hardhat && hardhat run scripts/deploy-V1ReferralPaymentQuantityUpgradable.ts --network hardhat"
  },
  "license": "ISC",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.6",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.7",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.6.8",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^3.4.0",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.4.0",
    "typechain": "^8.1.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.1",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@openzeppelin/truffle-upgrades": "^1.17.0",
    "chai-as-promised": "^7.1.1",
    "depcheck": "^1.4.3",
    "eth-gas-reporter": "^0.2.25",
    "hardhat-shorthand": "^1.0.0",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
