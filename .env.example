# API KEYS --> required for gas and fiat price retrieval
INFURA_API_KEY="valid api key"
ETHERSCAN_API_KEY="valid api key"
COINMARKETCAP_API_KEY="valid api key"

# GAS REPORTER FLAG --> enable / disable gas reporter plugin
REPORT_GAS="true or false"

# NUMBER OF ACCOUNTS THAT WILL BE USED FOR THE EVALUATION WHEN RUNNING THE EVALUATION SCRIPTS
# --> can be overwritten as done in the evaluate.sh shell script
NUMBER_OF_EVALUATION_ACCOUNTS="valid number"

# FLAGS FOR THE ACCOUNTS CONFIGURATION IN THE hardhat.config FILE
# --> if enabled the number of evalaution accounts are setup and used
# --> otherwise the default number of accounts defined in the hardhat.config file are used
USE_EVALUATION_ACCOUNTS="true | false"

# SEED PHRASE 12 WORD MNEMONIC --> required for HD wallet and account creation
MNEMONIC="test test test test test test test test test test test junk"

# FLAG TO USE HD WALLET FOR THE ACCOUNTS
#--> when enabled HD wallet is used generated from seedprhase
#--> otherwise need to pass valid account private keys separately as shown below
USE_HD_WALLET_ACCOUNTS="true | false"

